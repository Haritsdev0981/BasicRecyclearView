<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgDetai"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"
        />


        <TextView
            android:layout_below="@+id/imgDetai"
            android:id="@+id/idJudulDetail"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textSize="30dp"
            android:textStyle="bold"/>

            <View
                android:id="@+id/viewRecyDetail"
                android:layout_width="200dp"
                android:layout_height="3dp"
                android:background="#090101"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/idJudulDetail"
                />

            <TextView
                android:layout_below="@+id/viewRecyDetail"
                android:id="@+id/idSubJudulDetail"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subJudul"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>